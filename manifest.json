{
  "manifest_version": 3,
  "name": "AI Text Summarizer",
  "version": "1.1",
  "description": "Fasst markierten Text mit OpenAI's GPT-Technologie zusammen. Anpassbare Tonalit√§ten und Markdown-Export.",
  "permissions": [
    "activeTab",
  "contextMenus",
  "storage",
  "scripting"
  ],
  "host_permissions": [
  "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}